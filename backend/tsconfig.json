{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "app",
    "sourceMap": true
  },
  "include": ["app/**/*", "app/types/**/*"],
  "exclude": ["node_modules"]
}